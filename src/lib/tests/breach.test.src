	originalWrite = @Fs.write

	Fs.exists = function (_)
		return true
	end function

	Fs.write = function (_, _)
		// Mock write
	end function

	breaches = Breachs.New("1.2.3.4")

	Test.expect(breaches.publicIp).toBe("1.2.3.4")
