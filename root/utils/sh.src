// Improved shell.

import_code("fs")

Sh = {}
Sh.shell = null
Sh.fs = null

Sh.init = function (shell)
    sh = new Sh
    sh.shell = shell
    sh.computer = shell.host_computer
    sh.build = @shell.build
    sh.fs = Fs.New(shell)
    return Sh
end function

Sh.startTerminalAs = function (user, password)
    self.fs.autorunCode(Path.join("/home", user, "loginAs"), "get_shell("""+user+""","""+rootPassword+""").start_terminal")
end function


sh = Sh.create(get_shell)
